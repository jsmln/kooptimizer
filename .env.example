
## Local environment example for Kooptimizer
# Copy this file to .env and set real credentials there. Do NOT commit .env to git.

# ====================================================================
# DJANGO CORE SETTINGS
# ====================================================================
DJANGO_DEBUG=True
SECRET_KEY=your-secret-key-here-generate-new-one
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=

# ====================================================================
# SECURITY SETTINGS (Set these for production)
# ====================================================================
# Enable these when deploying to production with HTTPS
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# ====================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ====================================================================
DB_NAME=kooptimizer_db2
DB_USER=postgres
DB_PASSWORD=your-db-password-here
DB_HOST=127.0.0.1
DB_PORT=5432

# ====================================================================
# RECAPTCHA CONFIGURATION
# ====================================================================
RECAPTCHA_SITE_KEY=your-recaptcha-site-key-here
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key-here

# ====================================================================
# IPROG SMS API CONFIGURATION
# ====================================================================
IPROG_SMS_API_TOKEN=your-iprog-api-token-here
IPROG_SMS_API_URL=https://sms.iprogtech.com/api/v1/sms_messages
IPROG_SMS_API_URL_BULK=https://sms.iprogtech.com/api/v1/sms_messages/send_bulk

# ====================================================================
# BREVO EMAIL API CONFIGURATION
# ====================================================================
BREVO_API_KEY=your-brevo-api-key-here
BREVO_API_URL=https://api.brevo.com/v3/smtp/email
BREVO_SENDER_EMAIL=your-verified-sender@example.com
BREVO_SENDER_NAME=Kooptimizer

# ====================================================================
# OPTIIC OCR API CONFIGURATION (Optional)
# ====================================================================
OPTIIC_API_KEY=

# ====================================================================
# TICKETMASTER API CONFIGURATION (Optional)
# ====================================================================
TICKETMASTER_API_KEY=