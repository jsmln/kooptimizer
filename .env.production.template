## PRODUCTION environment configuration for Kooptimizer
# This file provides a template for production deployment
# Copy to .env.production and configure with real production values

# ====================================================================
# DJANGO CORE SETTINGS - PRODUCTION
# ====================================================================
DJANGO_DEBUG=False
SECRET_KEY=GENERATE-A-NEW-SECRET-KEY-USING-generate_secret_key.py
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ====================================================================
# SECURITY SETTINGS - ENABLE ALL FOR PRODUCTION
# ====================================================================
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ====================================================================
# DATABASE CONFIGURATION (PostgreSQL) - PRODUCTION
# ====================================================================
DB_NAME=kooptimizer_production
DB_USER=kooptimizer_user
DB_PASSWORD=USE-A-STRONG-RANDOM-PASSWORD-HERE
DB_HOST=your-db-host.example.com
DB_PORT=5432

# ====================================================================
# RECAPTCHA CONFIGURATION - PRODUCTION KEYS
# ====================================================================
RECAPTCHA_SITE_KEY=your-production-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-production-recaptcha-secret-key

# ====================================================================
# IPROG SMS API CONFIGURATION - PRODUCTION
# ====================================================================
IPROG_SMS_API_TOKEN=your-production-iprog-api-token
IPROG_SMS_API_URL=https://sms.iprogtech.com/api/v1/sms_messages
IPROG_SMS_API_URL_BULK=https://sms.iprogtech.com/api/v1/sms_messages/send_bulk

# ====================================================================
# BREVO EMAIL API CONFIGURATION - PRODUCTION
# ====================================================================
BREVO_API_KEY=your-production-brevo-api-key
BREVO_API_URL=https://api.brevo.com/v3/smtp/email
BREVO_SENDER_EMAIL=noreply@yourdomain.com
BREVO_SENDER_NAME=Kooptimizer

# ====================================================================
# OPTIIC OCR API CONFIGURATION - PRODUCTION
# ====================================================================
OPTIIC_API_KEY=your-production-optiic-key

# ====================================================================
# TICKETMASTER API CONFIGURATION - PRODUCTION
# ====================================================================
TICKETMASTER_API_KEY=your-production-ticketmaster-key
